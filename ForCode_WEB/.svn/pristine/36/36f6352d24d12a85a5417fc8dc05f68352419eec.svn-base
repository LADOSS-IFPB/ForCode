<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" 
    "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:f="http://java.sun.com/jsf/core">

<ui:composition template="/resources/templates/admin/page.xhtml">
	
	<ui:define name="content">
		
		<div class="page content">
			<div class="container">
				<div class="center"><h4>Create Manager</h4></div>		
					<div class="row">
						<h:form class="col s12">
							<div class="row">
								<div class="input-field col s6">
									<h:inputText id="first_name" type="text" class="validate" value="#{managerBean.manager.firstName}" required="true"/> 
									<h:outputLabel for="first_name" value="First Name"/>
								</div>
								<div class="input-field col s6">
									<h:inputText id="last_name" type="text" class="validate" value="#{managerBean.manager.lastName}" required="true"/> 
									<h:outputLabel for="last_name" value="Last Name"/>
								</div>
							</div>
							<div class="row">
								<div class="input-field col s6">
									<h:inputText id="email" type="email" class="validate" value="#{managerBean.manager.email}" required="true"/> 
									<h:outputLabel for="email" value="Email"/>
								</div>
								<div class="input-field col s6">
									<h:inputText id="nickname" type="text" class="validate" value="#{managerBean.manager.username}" required="true"/> 
									<h:outputLabel for="nickname" value="Username"/>
								</div>
							</div>
							<div class="row">
								<div class="input-field col s6">
									<h:inputSecret id="register_password" type="password" class="validate" value="#{managerBean.manager.password}"/> 
									<h:outputLabel for="register_password" value="Password"/>
								</div>
								<div class="input-field col s6">
									<h:inputSecret id="retype_password" type="password" class="validate" value="#{managerBean.manager.password}"/> 
									<h:outputLabel for="retype_password" value="Re-type Password"/>
								</div>
							</div>
							<div class="row">
								<div class="input-field col s6">
									<h:inputText id="phone" class="validate" value="#{managerBean.manager.phoneNumber}"/> 
									<h:outputLabel for="phone" value="Phone number"/>
								</div>
								<div class="col s6">
									<h:outputLabel value="Institution"/>
									<select class="browser-default">
										<option disabled="true" value="0">Select your institution</option>
								        <option value="1">Option 1</option>
							  		    <option value="2">Option 2</option>
								        <option value="3">Option 3</option>
								    </select>
								</div>
							</div>
							<div class="center">
								<h:commandLink styleClass="waves-effect waves-light btn light-blue darken-1" value="Register" actionListener="#{managerBean.manager.createM}"/>	
							</div>
							
						</h:form>
					</div>
			</div>
		</div>
		
	</ui:define>

</ui:composition>
</html>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" 
    "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:f="http://java.sun.com/jsf/core">

<ui:composition template="/resources/templates/manager/page.xhtml">
	
	<ui:define name="content">
		<div class="page content">
			<div class="container">
				<div class="row">
					<div class="col s12">
						<ul class="tabs">
							<li class="tab col s2">
								<a href="#tab1">General</a>
							</li>
							<li class="tab col s2 active">
								<a href="#tab2">Description</a>
							</li>
							<li class="tab col s2">
								<a href="#tab3">Samples</a>
							</li>
							<li class="tab col s2">
								<a href="#tab4">Testcases</a>
							</li>
							<li class="tab col s2">
								<a href="#tab5">Validation</a>
							</li>
						</ul>
					</div>
					
					<br/><br/>
					
					<div id="tab1" class="col s12">
						<div class="section">
							<h:form class="col s12">
								<div class="row">
									<div class="input-field col s9">
										<h:inputText id="first_name" type="text" class="validate"
											value="#{managerBean.manager.firstName}" required="true" />
										<h:outputLabel for="first_name" value="Title" />
									</div>
									<div class="input-field col s3">
										<h:inputText id="last_name" type="text" class="validate"
											value="#{managerBean.manager.lastName}" required="true" />
										<h:outputLabel for="last_name" value="Timelimit (ms)" />
									</div>
								</div>
								
								<div class="row">
									<div class="col s3 tooltipped" data-position="right" data-delay="50" data-tooltip="This problem will be public after being used in a contest">
										<h:selectBooleanCheckbox id="filled-in-box" checked="checked" style="display:none;"/>
										<h:outputLabel for="filled-in-box" value="Private problem"/>
									</div>
								</div>
								
								<div class="center">
									<h:commandLink styleClass="waves-effect waves-light btn light-blue darken-1" actionListener="#{managerBean.createManager}" value="Next"/>
								</div>
							</h:form>
						</div>
					</div>
					
					<div id="tab2" class="col s12">
						<div class="section">
							<h:form id="form">
					            <ul class="collapsible" data-collapsible="accordion">
									<li>
								    	<div class="collapsible-header"><i class="material-icons">subject</i>Main description</div>
								     	<div class="collapsible-body">
								     		<h:inputTextarea id="description" rows="10" cols="80"/>
								            <script>
								                CKEDITOR.replace( 'form:description' );
								            </script>
								     	</div>
								    </li>
								    <li>
								      	<div class="collapsible-header"><i class="material-icons">call_made</i>Input description</div>
								      	<div class="collapsible-body">
								      		<h:inputTextarea id="inputDescription" rows="10" cols="80"/>
								            <script>
								                CKEDITOR.replace( 'form:inputDescription' );
								            </script>
								      	</div>
								    </li>
								    <li>
								     	<div class="collapsible-header"><i class="material-icons">call_received</i>Output description</div>
								      	<div class="collapsible-body">
								      		<h:inputTextarea id="outputDescription" rows="10" cols="80"/>
								            <script>
								                CKEDITOR.replace( 'form:outputDescription' );
								            </script>
								      	</div>
								    </li>
								</ul>
					            
					            <div class="center">
									<h:commandLink styleClass="waves-effect waves-light btn light-blue darken-1" actionListener="#{managerBean.createManager}" value="Next"/>
								</div>
					        </h:form>
				        </div>
					</div>
					
					<br/><br/>
					
					<div id="tab3" class="col s12">
						Test 3
					</div>
					
					<br/><br/>
					
					<div id="tab4" class="col s12">
						Test 4
					</div>
					
					<br/><br/>
					
					<div id="tab5" class="col s12">
						Test 5
					</div>
				</div>
			</div>
		</div>
	</ui:define>

</ui:composition>
</html>
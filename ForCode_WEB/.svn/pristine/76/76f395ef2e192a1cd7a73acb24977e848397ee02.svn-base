<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" 
    "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:f="http://java.sun.com/jsf/core">

<ui:composition template="/resources/templates/admin/page.xhtml">

	<ui:define name="content">

		<div class="page content">
			<div class="container">
				<div class="center">
					<h4>Create Admin</h4>
				</div>
				<div class="row">
					<h:form class="col s12">
						<div class="row">
							<div class="input-field col s6">
								<h:inputText id="first_name" type="text" class="validate"
									value="#{adminBean.admin.firstName}" required="true" />
								<h:outputLabel for="first_name" value="First Name" />
							</div>
							<div class="input-field col s6">
								<h:inputText id="last_name" type="text" class="validate"
									value="#{adminBean.admin.lastName}" required="true" />
								<h:outputLabel for="last_name" value="Last Name" />
							</div>
						</div>
						<div class="row">
							<div class="input-field col s4">
								<h:inputText id="email" type="email" class="validate"
									value="#{adminBean.admin.email}" required="true" />
								<h:outputLabel for="email" value="Email" />
							</div>
							<div class="input-field col s4">
								<h:inputText id="phone" class="validate"
									value="#{adminBean.admin.phoneNumber}" />
								<h:outputLabel for="phone" value="Phone number" />
							</div>
							<div class="input-field col s4">
								<h:inputText id="nickname" type="text" class="validate"
									value="#{adminBean.admin.username}" required="true" />
								<h:outputLabel for="nickname" value="Username" />
							</div>
						</div>
						<div class="row">
							<div class="input-field col s6">
								<h:inputSecret id="register_password" type="password"
									class="validate" value="#{adminBean.admin.password}" />
								<h:outputLabel for="register_password" value="Password" />
							</div>
							<div class="input-field col s6">
								<h:inputSecret id="retype_password" type="password"
									class="validate" value="#{adminBean.admin.password}" />
								<h:outputLabel for="retype_password" value="Re-type Password" />
							</div>
						</div>
						<div class="center">
							<h:commandLink
								styleClass="waves-effect waves-light btn light-blue darken-1"
								value="Register" actionListener="#{adminBean.createAdmin}" />
						</div>

					</h:form>
				</div>
			</div>
		</div>

	</ui:define>

</ui:composition>
</html>